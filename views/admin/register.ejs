<% include ../layouts/header %>

<div class="container container-fluid mt-3 text-dark text-center">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/register" method="POST">
                <div class="heading-2 text-center mt-3">ADMIN REGISTER</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label class="required" for="username">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" value="<%= typeof username != 'undefined' ? username : '' %>" required>
                </div>
                <div class="form-group">
                    <label class="required" for="password">Password</label>
                    <input type="password" class="form-control" id="password1" placeholder="Enter password" name="password1" required>
                    <label class="required mt-3" for="password">Confirm Password</label>
                    <input type="password" class="form-control" id="password2" placeholder="Confirm password" name="password2" required>
                </div>
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Register</button>
                <!-- <a href="/login" class="btn btn-outline-danger mr-2 pl-4 pr-4 ">Login</a> -->
            </form>
        </div>
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
    </div>
</div>

<% include ../layouts/footer %>