<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6 d-flex flex-column align-items-center justify-content-around">
            <% include ../layouts/messages %>
            <div class="col-lg-9">
                <div class="heading-3">Name: <span class="para-1 mb-4"><%= student.name %></span></div>
                <div class="heading-3">Batch: <span class="para-1 mb-4"><%= student.batch %></span></div>
                <div class="heading-3">Created: <span class="para-1 mb-4 date"><%= student.created %></span></div>
                <div class="heading-3">Deleted: <span class="para-1 mb-4 date"><%= student.deleted %></span></div>
            </div>
            <% let present = 0; let total = 0; %>
            <table class="table">
                <caption style="caption-side: top;" class="text-center heading-3">Attendance (Lifetime)</caption>
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <% if (dates) { %>
                <tbody>
                    <% dates.forEach(date => { total ++; %>
                    <tr>
                        <td class="date"><%= date %></td>
                        <% if(attendance.includes(date)) { present ++; %></td>
                        <td><%= PRESENT %></td>
                        <% } else { %>
                        <td><%= ABSENT %></td>
                        <% } %>
                    </tr>
                    <% }); %>
                </tbody>
                <% } %>
            </table>
            <div class="mt-3 pl-4 pr-4"><span class="bold">Number of days attended:</span> <%= present %></div>
            <div class="my-0 pl-4 pr-4"><span class="bold">Total number of days:</span> <%= total %></div>
            <div class="mb-3 pl-4 pr-4"><span class="bold">Attendance percentage:</span> <%= Math.round(present/total * 100 * 100) / 100 %> %</div>
        </div>
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
    </div>
</div>

<% include ../layouts/footer %>